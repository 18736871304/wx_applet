/**index.wxss**/
/*隐藏滚动条*/
@import "index.skeleton.wxss";

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.zhegai {
  width: 100%;
  height: 1000px;
  /* background: #000; */
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user {
  display: flex;
  width: 90%;
  margin-top: 2%;
  margin-bottom: 3%;
  align-items: center;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-guan {
  width: 33rpx;
  height: 32rpx;
  vertical-align: middle;
}

.userinfo-nickname {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
  font-size: 32rpx;
  font-family: "appleStandard";
}

.weui-progress {
  width: 500rpx;
  border-radius: 20rpx;
}

.weui-progress__inner-bar {
  border-radius: 30rpx;
  background-color: #1A1E33;
}

.weui-progress__bar {
  height: 6rpx;
  background-color: #B1B4BF;
  border-radius: 30px;
}

.weui-hidden_abs {
  font-size: 26rpx;
  font-family: "Ali";
}

.sv-item-on {
  color: red;
}

.sv-item-off {
  color: black;
}

.scroll-view_H {
  display: flex;
  white-space: nowrap;
}

.nav::-webkit-scrollbar {
  display: none;
}

/* tab 切换 */
.main {
  position: relative;
  width: 100%;
  height: 704rpx;
}

.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 65rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  position: absolute;
  top: 0;
  left: 0;
}

.nav-item {
  width: 25%;
  display: inline-block;
  text-align: center;
  border: 1px solid #9E9E9E;
  border-radius: 45rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  overflow: visible;
  font-family: "appleMiddleBlack";
}

.nav-item:first-child {
  margin-left: 5%;
}

.nav-item.active {
  color: #fff;
  background: #1A1E33;
}

.tab-box {
  /* 这个是导航高度80+24的间距 */
  padding-top: 104rpx;
  box-sizing: border-box;
  height: 694rpx;

}

.tab-content {
  /* display: flex; */
  overflow-y: scroll;
  position: relative;
}

.tab-content image {
  width: 100%;
  height: 100%;
}

.tab00_main {
  position: absolute;
  top: 200rpx;
  left: 10%;
}

.tab-main {
  display: flex;
  justify-content: space-around;
  color: #FFFFFF;
  width: 300rpx;
  margin-left: 1%;
}

.tab-num {
  font-size: 28rpx;
}

.tab-num view:first-child {
  line-height: 55rpx;
}

.tab-num:first-child {
  margin-right: 60rpx;
}

.tab-num view text {
  font-size: 70rpx;
  font-family: "DIN";
}

.tab00_bigbox {
  display: flex;
  margin-top: 45rpx;
  margin-left: -12rpx;
}

.tab00_bigbox image {
  width: 48rpx;
  display: block;
  margin-bottom: 10rpx;
  /* height: 34rpx; */
}

.tab00 {
  width: 300rpx;
  border-radius: 30rpx;
  /* padding: 35rpx 25rpx; */
  position: relative;
  overflow: hidden;
}



.tab00 .tab01 {
  width: 100%;
  height: 100%;
  padding: 25rpx 21rpx;
}

.tab00 .baodan {
  font-family: "appleMindleBlack";
  font-size: 32rpx;
  color: #1A1E33;
  font-weight: bold;
  line-height: 48rpx;
  letter-spacing: 1rpx;
}

.tab00 view:last-child {
  font-family: "Ali";
  font-size: 26rpx;
  color: #777B8C;
}

.tab00:first-child {
  margin-right: 26rpx;
}
.tab00_bigbox .tab00 {
background: #fff;
}
.tab01_mian {
  position: absolute;
  top: 100rpx;
  left: 10%;
}

.tab01_mian .tab00_bigbox .tab00 {
  background: #fff;
}

.tab01_mian .tab00_bigbox:last-child {
  margin-top: 30rpx;
}

.tab-right {
  width: 180rpx;
  height: 40rpx;
  background: #E68273;
  color: #fff;
  font-size: 26rpx;
  font-family: "Ali";
  letter-spacing: 3rpx;
  text-align: center;
  position: absolute;
  top: 10px;
  right: -50rpx;
  transform: rotate(45deg);
  z-index: 9999;
  overflow: hidden;
}

.tab01_mian .tab00_bigbox .modify {
  background: #F9D8D5;
}

.tab00 .modify {
  background: #F9D8D5;
}

/* 积分 */

.integral {
  width: 90%;
  margin-top: 2%;
  margin-bottom: 3%;

}

.int_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.int_title view:first-child {
  font-family: "appleMiddleBold";
  font-size: 40rpx;
  color: #1A1E33;
  letter-spacing: 1.2rpx;
  line-height: 40rpx;
}

.int_title view:last-child {
  font-family: "Ali";
  font-size: 26rpx;
  color: #B1B4BF;
  line-height: 26rpx;
}

/* 增值服务 */
.weui-media-box {
  width: 662rpx;
  height: 130rpx;
  padding: 0 40rpx;
  background: #F5F6F9;
  border-radius: 40rpx;
  margin-top: 30rpx;
}

.weui-media-box .weui-media-box__hd {
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.weui-media-box .weui-media-box__hd image {
  width: 90rpx;
  height: 90rpx;
}

.weui-media-box:before {
  content: " ";
  border-top: 0;
}